<div class="text-center">
  <h3><%= t('.title') %></h3>
</div>

<div class="table-responsive">
  <table class="table">
    <tbody>
      <% @grouped_by_region_prefectures.each do |region, prefectures| %>
        <tr class="text-nowrap">
          <th scope="row"><%= region[0] %></th>
          <% prefectures.each do |prefecture| %>
            <td><%= link_to prefecture.name, prefecture %></td>
          <% end %>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>