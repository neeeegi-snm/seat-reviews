<div class="mt-5">
  <div class="text-center">
    <img class="rounded-circle  mb-5" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="#">
    <h3><%= @user.name %></h3>
  </div>
</div>

<div>
  <ul class="nav nav-tabs mb-3">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"><%= t('dictionary.words.reviews') %>&ensp;<span class="badge badge-secondary"><%= @count_reviews %></span></a></li>
    <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>"><%= t('dictionary.words.favorite') %>&ensp;<span class="badge badge-secondary"><%= @count_favorites %></span></a></li>
  </ul>
  <%= render 'reviews/reviews', reviews: @reviews %>
</div>
