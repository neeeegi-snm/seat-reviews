<div class="text-center">
  <h3><%= t('.title') %></h3>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('dictionary.words.email') %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, t('dictionary.words.password') %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit t('.login'), class: 'btn btn-primary btn-block mb-3' %>
    <% end %>
    <p><%= link_to t('.signup_page'), signup_path %></p>
  </div>
</div>

<div>
  <P><%= link_to t('dictionary.words.back_toppage'), root_path %></P>
</div>